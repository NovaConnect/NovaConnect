@using System.Net.Http
@using System.Net.Http.Json
@using NovaConnect.Runtimes
@using NovaConnect.Runtimes.Models

<div id="bottom" class="white-background bottom-navbar">
    @foreach (var nav in ApplicationRuntimes.NavItems)
    {
        @if (nav.Mobile)
        {
            <NavLink class="navbar-item" href="@nav.Jump">
                <div class="icon">@((MarkupString)nav.Icon)</div>
                <!--<div class="name">@nav.Name</div>-->
            </NavLink>
        }
    }
</div>

<script>
    if(window.innerWidth < 767){
        document.getElementById("bottom").style.display = "";
    }
    else{
        document.getElementById("bottom").style.display = "none";
    }
</script>